<script>
  $(document).ready(function(){
    var getdescription=function(){
      var url='<%=j v1_details_path%>'+'/9';
      // console.log(url);
      var x=$('.slick-current > div').data('id');
      // console.log(x);
      $.get( url, {o_id:x}, function(data){ 
         console.log(data);
         str=data['description'];
        $('#deatil-description h1').html(str);   
      }, 'json' );
    }
    $('.slick-current').ready(function(){
      getdescription();
    }); 
    $('body').on('click',$('.slick-prev,.slick_next'), function(e){
      // console.log('prev clicked');
      getdescription();
    });
    $('.for-slick').slick({

      // centerMode: true,
      // centerPadding: '60px',
      speed: 300,
      slidesToShow: 3,
      responsive: [
        {
          breakpoint: 992,
          settings: {
            arrows: true,
            // centerMode: true,
            // centerPadding: '40px',
            slidesToShow: 2
          }
        },
        {
          breakpoint: 768,
          settings: {
            arrows: true,
            // centerMode: true,
            // centerPadding: '40px',
            slidesToShow: 1
          }
        },
        {
          breakpoint: 480,
          settings: {
            arrows: true,
            // centerMode: true,
            // centerPadding: '40px',
            slidesToShow: 1
          }
        }
      ]
    });
  });
</script>
