<div class="container-fluid userprofile">
    <div class="row">
        <div class="col-md-4 col-md-offset-1 col-xs-12">

            <div class="col-md-12">
                <div class="userprofile-pic"></div>
            </div>
            <div class="col-md-12">
                <h4>
                    <%=@user.fullname%>
                </h4>
            </div>
            <div class="col-md-12" style="color: #F6C90E">
                <i class="fa fa-star fa-2x" aria-hidden="true"></i>
                <i class="fa fa-star fa-2x" aria-hidden="true"></i>
                <i class="fa fa-star fa-2x" aria-hidden="true"></i>
                <i class="fa fa-star fa-2x" aria-hidden="true"></i>
                <i class="fa fa-star-half-o fa-2x" aria-hidden="true"></i>

            </div>
            <div class="col-md-6">
                <div class="owner_count">
                    委託數
                    <p>22</p>
                </div>
            </div>
            <div class="col-md-6 clearfix">
                <div class="courier_count">
                    代買數
                    <p>18</p>
                </div>
            </div>
            <%= link_to "修改個人資料", edit_user_path(current_user), :class => "btn btn-info"%>
        </div>

        <div class="col-md-5 col-md-push-1 col-xs-12 user-info">
            <div class="col-md-12 user-info-fix">
                <i class="fa fa-user fa-2x" aria-hidden="true"></i>
                <h4>真實姓名</h4>
                <p><%=@user.fullname%></p>
            </div>
            <div class="col-md-12 user-info-fix">
                <i class="fa fa-mobile fa-3x" aria-hidden="true"></i>
                <h4>電話號碼</h4>
                <p><%=@user.phone%></p>
            </div>
            <div class="col-md-12 user-info-fix">
                <i class="fa fa-envelope fa-2x" aria-hidden="true"></i>
                <h4>電子信箱</h4>
                <p><%=@user.email%></p>
            </div>
            <div class="col-md-12 user-info-fix">
                <i class="fa fa-file-text fa-2x" aria-hidden="true"></i>
                <h4>自我介紹</h4>
                <p><%=@user.introduction%></p>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid user_orders">
    <div class="row">
        <ul class="tab clearfix">
            <li class="active">委託案件</li>
            <li>代買案件</li>
        </ul>

        <div id="contents">
            <div class="content active">
                <div class="container">
                    <div class="row">
                        <div class="col-md-5 col-md-offset-2 col-xs-12">
                            <!-- Dear Richard, 以下是「委託案件」（owner)的 未結單插入地 -->
                            <h2>未結單</h2>
                            <h2>送餐中</h2>
                            <ul>
                                <% @owner_go.each do |o|%>
                                <li>代買者：<%= User.find(o.courier_id).fullname%></li>

                                <div>
                                    <br></br><%= render :partial => "orders/order", :locals => {:o => o} %>
                                    <br></br>
                                </div>

                                <%end%>
                            </ul>
                            <h2>尚未被接單</h2>
                            <ul>
                                <% @owner_post.each do |o|%>
                                <br>
                                <div class="orders_list" style="background-color:#3A4750">
                                    <br><<%= render :partial => "orders/order", :locals => {:o => o} %>
                                    </br>
                                </div>
                                <%end%>
                            </ul>
                        </div>
                        <div class="col-md-5 col-xs-12 done-order">
                            <!-- Dear Richard, 以下是「委託案件」（owner)的 已結單插入地 -->
                            <h2>已結單</h2>
                            <ul>
                                <% @owner_old.each do |o|%>
                                <li>代買者：<%= User.find(o.courier_id).fullname%></li>

                                <div>
                                    <br></br><%= render :partial => "orders/order", :locals => {:o => o} %>
                                    <br></br>
                                </div>
                                <%end%>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <div class="content">
                <div class="container">
                    <div class="row">
                        <div class="col-md-5 col-md-offset-2 col-xs-12">
                            <!-- Dear Richard, 以下是「代買案件」（courier)的 未結單插入地 -->
                            <h2>未結單</h2>
                            <h2>代買中</h2>
                            <ul>
                                <% @courier_go.each do |o|%>
                                <div>
                                    <br></br><%= render :partial => "orders/order", :locals => {:o => o} %>
                                    <br></br>
                                </div>
                                <%end%>
                            </ul>
                        </div>
                        <div class="col-md-5 col-xs-12 done-order">
                            <!-- Dear Richard, 以下是「代買案件」（courier)的 已結單插入地 -->
                            <h2>已結單</h2>
                            <h2>完成送餐</h2>
                            <ul>
                                <% @courier_old.each do |o|%>
                                <div>
                                    <br></br><%= render :partial => "orders/order", :locals => {:o => o} %>
                                    <br></br>
                                </div>
                                <%end%>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<script>
    $(document).ready(function () {

        $('.tab li').click(function (e) {

            var index = $(e.currentTarget).index();
            $('.tab li').removeClass('active').eq(index).addClass('active');
            $('.content').removeClass('active').eq(index).addClass('active');

        });

    });
</script>
